<scene version="3.0.0">
	<default name="integrator" value="path" />
	<default name="resy" value="720" />
	<default name="resx" value="720" />
	<default name="max_depth" value="6" />

	<integrator type="$integrator">
		<integer name="max_depth" value="$max_depth" />
	</integrator>
	<sensor type="perspective">
		<float name="fov" value="45" />
		<transform name="to_world">
			<lookat origin="1.3, -3.2, 1" target="0, 0, 0" up="0, 1, 0"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="1" />
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx" />
			<integer name="height" value="$resy" />
			<string name="file_format" value="openexr" />
			<string name="pixel_format" value="rgb" />
			<rfilter type="tent" />
		</film>
	</sensor>
	<shape type="3dgs">
		<string name="filename" value="point_cloud.ply"/>
		<bsdf type="diffuse">
		    <rgb name="reflectance" value="0.2, 0.25, 0.7"/>
		</bsdf>
		<transform name="to_world">
			<translate value="0, 0, 0"/>
		</transform>
	</shape>
